@model HomePageDiagnoseModel

@{
    ViewData["Title"] = Model.Title;
}

<article>
    <header class="text-center">
        <h2>Summary</h2>
    </header>
    <section>
        <header class="text-center">
            <h4>Diagnoses - primary MKB summary</h4>
        </header>
        <div>
            <div class="row">
                <div class="col-sm-2 font-weight-bold">MKB code</div>
                <div class="col-sm-8 font-weight-bold">MKB name</div>
                <div class="col-sm-2 font-weight-bold">Count</div>
            </div>
            @if (Model.DiagnosesMKBSummaryViewModels != default && Model.DiagnosesMKBSummaryViewModels.Count > 0)
            {
                foreach (var diagnose in Model.DiagnosesMKBSummaryViewModels)
                {
                    <hr />
                    <div class="row">
                        <div class="col-sm-2">@diagnose.Code</div>
                        <div class="col-sm-8">@diagnose.Name</div>
                        <div class="col-sm-2">@diagnose.Count</div>
                    </div>
                }
            }
            else
            {
                <div>No results.</div>
            }
        </div>
    </section>
</article>