@model HomePageDiagModel

@{
    ViewData["Title"] = Model.Title;
}

<article>
    <header class="text-center">
        <h2>Summary</h2>
    </header>
    <section>
        <header class="text-center">
            <h4>Diag MKB summary - MKB code</h4>
        </header>
        <div>
            <div class="row">
                <div class="col-sm-2 font-weight-bold">MKB code</div>
                <div class="col-sm-8 font-weight-bold">MKB name</div>
                <div class="col-sm-2 font-weight-bold">Count</div>
            </div>
            @if (Model.DiagMKBSummaryViewModels != default && Model.DiagMKBSummaryViewModels.Count > 0)
            {
                foreach (var diag in Model.DiagMKBSummaryViewModels)
                {
                    <hr />
                    <div class="row">
                        <div class="col-sm-2">@diag.Code</div>
                        <div class="col-sm-8">@diag.Name</div>
                        <div class="col-sm-2">@diag.Count</div>
                    </div>
                }
            }
            else
            {
                <div>No results.</div>
            }
        </div>
    </section>
</article>