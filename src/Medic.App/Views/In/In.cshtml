@model InPageInModel

@{
    ViewData["Title"] = Model.Title;
}

@if (Model.InViewModel != default)
{
    <article>
        <header>
            <h1>In data - @Model.InViewModel.UniqueIdentifier</h1>
        </header>
        <h2 class="text-center">Patient</h2>
        <partial name="~/Views/Shared/Partials/Patients/PatientSummaryViewModel.cshtml" model="@Model.InViewModel.Patient" />
        <hr />
        <h2 class="text-center">Sender</h2>
        <partial name="~/Views/Shared/Partials/HealthcarePractitioners/HealthcarePractitionerSummaryViewModel.cshtml" model="@Model.InViewModel.Sender" />
        <hr />
        <div>Send date: @Model.InViewModel.SendDate.ToShortDateString()</div>
        <hr />
        <h2 class="text-center">Send diagnose</h2>
        <partial name="~/Views/Shared/Partials/Diagnoses/DiagnosePreviewViewModel.cshtml" model="@(new List<DiagnosePreviewViewModel>() { Model.InViewModel.SendDiagnose })" />
        <hr />
        <h2 class="text-center">Diagnoses</h2>
        <partial name="~/Views/Shared/Partials/Diagnoses/DiagnosePreviewViewModel.cshtml" model="@Model.InViewModel.Diagnoses" />
        <hr />
        <h2 class="text-center">Additional information</h2>
        <hr />
        <div class="row">
            <div class="col-sm-4">Patient branch: @Model.InViewModel.PatientBranch</div>
            <div class="col-sm-4">Patient HRegion: @Model.InViewModel.PatientHRegion</div>
            <div class="col-sm-4">InType: @Model.InViewModel.InType</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">Send urgency: @Model.InViewModel.SendUrgency</div>
            <div class="col-sm-4">Send apr: @Model.InViewModel.SendApr</div>
            <div class="col-sm-4">Send clinical path: @Model.InViewModel.SendClinicalPath</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">Unique identifier: @Model.InViewModel.UniqueIdentifier</div>
            <div class="col-sm-4">Examination date: @Model.InViewModel.ExaminationDate.ToShortDateString()</div>
            <div class="col-sm-4">Planned number: @Model.InViewModel.PlannedNumber</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">Urgency: @Model.InViewModel.Urgency</div>
            <div class="col-sm-4">InApr: @Model.InViewModel.InApr</div>
            <div class="col-sm-4">Clinical path: @Model.InViewModel.ClinicalPath</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">NZOK pay: @Model.InViewModel.NZOKPay</div>
            <div class="col-sm-4">In medical ward: @Model.InViewModel.InMedicalWard</div>
            <div class="col-sm-4">Entry date: @Model.InViewModel.EntryDate.ToShortDateString()</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">Severity: @Model.InViewModel.Severity</div>
            <div class="col-sm-4">Delay: @Model.InViewModel.Delay</div>
            <div class="col-sm-4">Payer: @Model.InViewModel.Payer</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">Age in days: @Model.InViewModel.AgeInDays</div>
            <div class="col-sm-4">Weight in grams: @Model.InViewModel.WeightInGrams</div>
            <div class="col-sm-4">Birth weight: @Model.InViewModel.BirthWeight</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">Mother IZ year: @Model.InViewModel.MotherIZYear</div>
            <div class="col-sm-4">Mother IZ No: @Model.InViewModel.MotherIZNo</div>
            <div class="col-sm-4">IZ year: @Model.InViewModel.IZYear</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">IZNo: @Model.InViewModel.IZNo</div>
            <div class="col-sm-4">CPFile: @Model.InViewModel.CPFile</div>

        </div>
    </article>
}
else
{
    <div class="text-center text-info">No in information</div>
}
