@model InPageInModel
@inject MedicDataLocalization medicDataLocalization

@{
    ViewData["Title"] = Model.Title;
}

@if (Model.InViewModel != default)
{
    <article>
        <header>
            <h2 class="text-center">@($"{medicDataLocalization.Get("InsView")} - {@Model.InViewModel.UniqueIdentifier}")</h2>
            <h4 class="text-center text-info">@Model.Keywords</h4>
        </header>
        <h2 class="text-center">@medicDataLocalization.Get("Patient")</h2>
        <partial name="~/Views/Shared/Partials/Patients/PatientSummaryViewModel.cshtml" model="@Model.InViewModel.Patient" />
        <hr />
        <h2 class="text-center">@medicDataLocalization.Get("Sender")</h2>
        <partial name="~/Views/Shared/Partials/HealthcarePractitioners/HealthcarePractitionerSummaryViewModel.cshtml" model="@Model.InViewModel.Sender" />
        <hr />
        <div>@medicDataLocalization.Get("DateSend"): @Model.InViewModel.SendDate.ToShortDateString()</div>
        <hr />
        <h2 class="text-center">@medicDataLocalization.Get("SendDiagnose")</h2>
        <partial name="~/Views/Shared/Partials/Diagnoses/DiagnosePreviewViewModel.cshtml" model="@Model.InViewModel.SendDiagnose" />
        <hr />
        <h2 class="text-center">@medicDataLocalization.Get("Diagnoses")</h2>
        <partial name="~/Views/Shared/Partials/Diagnoses/DiagnosePreviewViewModels.cshtml" model="@Model.InViewModel.Diagnoses" />
        <hr />
        <h2 class="text-center">@medicDataLocalization.Get("AdditionalInformation")</h2>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("PatientBranch"): @Model.InViewModel.PatientBranch</div>
            <div class="col-sm-4">@medicDataLocalization.Get("PatientHRegion"): @Model.InViewModel.PatientHRegion</div>
            <div class="col-sm-4">@medicDataLocalization.Get("InType"): @Model.InViewModel.InType</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("SendUrgency"): @Model.InViewModel.SendUrgency</div>
            <div class="col-sm-4">@medicDataLocalization.Get("SendApr"): @Model.InViewModel.SendApr</div>
            <div class="col-sm-4">@medicDataLocalization.Get("SendClinicalPath"): @Model.InViewModel.SendClinicalPath</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("UniqueIdentifier"): @Model.InViewModel.UniqueIdentifier</div>
            <div class="col-sm-4">@medicDataLocalization.Get("ExaminationDate"): @Model.InViewModel.ExaminationDate.ToShortDateString()</div>
            <div class="col-sm-4">@medicDataLocalization.Get("PlannedNumber"): @Model.InViewModel.PlannedNumber</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("Urgency"): @Model.InViewModel.Urgency</div>
            <div class="col-sm-4">@medicDataLocalization.Get("InApr"): @Model.InViewModel.InApr</div>
            <div class="col-sm-4">@medicDataLocalization.Get("ClinicalPath"): @Model.InViewModel.ClinicalPath</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("NZOKPay"): @Model.InViewModel.NZOKPay</div>
            <div class="col-sm-4">@medicDataLocalization.Get("InMedicalWard"): @Model.InViewModel.InMedicalWard</div>
            <div class="col-sm-4">@medicDataLocalization.Get("EntryDate"): @Model.InViewModel.EntryDate.ToString("g")</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("Severity"): @Model.InViewModel.Severity</div>
            <div class="col-sm-4">@medicDataLocalization.Get("Delay"): @Model.InViewModel.Delay</div>
            <div class="col-sm-4">@medicDataLocalization.Get("Payer"): @Model.InViewModel.Payer</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("AgeInDays"): @Model.InViewModel.AgeInDays</div>
            <div class="col-sm-4">@medicDataLocalization.Get("WeightInGrams"): @Model.InViewModel.WeightInGrams</div>
            <div class="col-sm-4">@medicDataLocalization.Get("BirthWeight"): @Model.InViewModel.BirthWeight</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("MotherIZYear"): @Model.InViewModel.MotherIZYear</div>
            <div class="col-sm-4">@medicDataLocalization.Get("MotherIZNo"): @Model.InViewModel.MotherIZNo</div>
            <div class="col-sm-4">@medicDataLocalization.Get("IZYear"): @Model.InViewModel.IZYear</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("IZNo"): @Model.InViewModel.IZNo</div>
            <div class="col-sm-4">@medicDataLocalization.Get("CPFile"): @Model.InViewModel.CPFile</div>

        </div>
    </article>
}
else
{
    <div class="text-center text-info">@medicDataLocalization.Get("NoResults")</div>
}
