@model PathProcedurePagePathProcedureModel
@inject MedicDataLocalization medicDataLocalization

@{
    ViewData["Title"] = Model.Title;
}

@if (Model.PathProcedureViewModel != default)
{
    <article>
        <header>
            <h2 class="text-center">@($"{Html.Raw(medicDataLocalization.Get("PathProcedure"))} - {@Model.PathProcedureViewModel.VisitDocumentUniqueIdentifier}")</h2>
            <h4 class="text-center text-info">@Model.Keywords</h4>
        </header>
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("Patient"))</h2>
        <partial name="~/Views/Shared/Partials/Patients/PatientSummaryViewModel.cshtml" model="@Model.PathProcedureViewModel.Patient" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("Sender"))</h2>
        <partial name="~/Views/Shared/Partials/HealthcarePractitioners/HealthcarePractitionerSummaryViewModel.cshtml" model="@Model.PathProcedureViewModel.Sender" />
        <hr />
        <div>Send date: @Model.PathProcedureViewModel.DateSend.ToShortDateString()</div>
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("FirstMainDiag"))</h2>
        <partial name="~/Views/Shared/Partials/Diags/DiagPreviewViewModel.cshtml" model="@Model.PathProcedureViewModel.FirstMainDiag" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("SecondMainDiag"))</h2>
        <partial name="~/Views/Shared/Partials/Diags/DiagPreviewViewModel.cshtml" model="@Model.PathProcedureViewModel.SecondMainDiag" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("DoneProcedures"))</h2>
        <partial name="~/Views/Shared/Partials/DoneProcedures/DoneProcedureViewModels.cshtml" model="@Model.PathProcedureViewModel.DoneProcedures" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("DoneNewProcedures"))</h2>
        <partial name="~/Views/Shared/Partials/Procedures/ProcedureSummaryViewModels.cshtml" model="@Model.PathProcedureViewModel.DoneNewProcedures" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("UsedDrug"))</h2>
        <partial name="~/Views/Shared/Partials/ClinicUsedDrugs/ClinicUsedDrugsViewModel.cshtml" model="@Model.PathProcedureViewModel.UsedDrugs" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("ClinicProcedures"))</h2>
        <partial name="~/Views/Shared/Partials/ClinicProcedures/ClinicProcedureViewModels.cshtml" model="@Model.PathProcedureViewModel.ClinicProcedures" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("CeasedClinicalPath"))</h2>
        <hr />
        <partial name="~/Views/Shared/Partials/CeasedClinicals/CeasedClinicalViewModel.cshtml" model="@Model.PathProcedureViewModel.CeasedClinicalPath" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("CeasedProcedure"))</h2>
        <hr />
        <partial name="~/Views/Shared/Partials/CeasedClinicals/CeasedClinicalViewModel.cshtml" model="@Model.PathProcedureViewModel.CeasedProcedure" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("AdditionalInformation"))</h2>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PatientBranch")): @Model.PathProcedureViewModel.PatientBranch</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PatientHRegion")): @Model.PathProcedureViewModel.PatientHRegion</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("CPrSend")): @Model.PathProcedureViewModel.CPrSend</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("APrSend")): @Model.PathProcedureViewModel.APrSend</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("TypeProcSend")): @Model.PathProcedureViewModel.TypeProcSend</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("CPrPriem")): @Model.PathProcedureViewModel.CPrPriem</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("APrPriem")): @Model.PathProcedureViewModel.APrPriem</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("MedicalWard")): @Model.PathProcedureViewModel.MedicalWard</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("TypeProcPriem")): @Model.PathProcedureViewModel.TypeProcPriem</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ProcRefuse")): @Model.PathProcedureViewModel.ProcRefuse</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("IZNumChild")): @Model.PathProcedureViewModel.IZNumChild</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("IZYearChild")): @Model.PathProcedureViewModel.IZYearChild</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("FirstVisitDate")): @(Model.PathProcedureViewModel.FirstVisitDate == default ? default : ((DateTime)Model.PathProcedureViewModel.FirstVisitDate).ToShortDateString())</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DatePlanPriem")): @(Model.PathProcedureViewModel.DatePlanPriem == default ? default : ((DateTime)Model.PathProcedureViewModel.DatePlanPriem).ToShortDateString())</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("VisitDocumentUniqueIdentifier")): @Model.PathProcedureViewModel.VisitDocumentUniqueIdentifier</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("VisitDocumentName")): @Model.PathProcedureViewModel.VisitDocumentName</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DateProcedureBegins")): @(Model.PathProcedureViewModel.DateProcedureBegins == default ? default : ((DateTime)Model.PathProcedureViewModel.DateProcedureBegins).ToShortDateString())</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DateProcedureEnd")): @(Model.PathProcedureViewModel.DateProcedureEnd == default ? default : ((DateTime)Model.PathProcedureViewModel.DateProcedureEnd).ToShortDateString())</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("AllDoneProcedures")): @Model.PathProcedureViewModel.AllDoneProcedures</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("AllDrugCost")): @Model.PathProcedureViewModel.AllDrugCost</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PatientStatus")): @Model.PathProcedureViewModel.PatientStatus</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("OutUniqueIdentifier")): @Model.PathProcedureViewModel.OutUniqueIdentifier</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("Sign")): @Model.PathProcedureViewModel.Sign</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("NZOKPay")): @Model.PathProcedureViewModel.NZOKPay</div>
        </div>
    </article>
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get("NoResults"))</div>
}