@model PatientPageIndexModel
@inject PatientLocalization patientLocalization

@{
    ViewData["Title"] = Model.Title;

    bool hasResults = Model.Patients != default && Model.Patients.Count > 0;

    Dictionary<string, string> paramsByName = Model.Search != default ?
        Model.Search.BuildQuery(default) : new Dictionary<string, string>();

    ViewData[Constants.Sexes] = Model.Sexes;
}

<article>
    <header>
        <h2 class="text-center">@($"{Html.Raw(patientLocalization.Get("PatientSearch"))} - {Model.TotalResults} {Html.Raw(patientLocalization.Get("Results"))}")</h2>
        <h4 class="text-center text-info">@Model.Keywords</h4>
    </header>
    <section>
        <partial name="~/Views/Shared/Partials/Patients/PatientSearch.cshtml" model="@Model.Search" view-data="@ViewData" />
    </section>
    <section class="mt-sm-1 clearfix">
        <partial name="~/Views/Shared/Partials/Patients/PatientOrder.cshtml" model="@Model.Search" />
    </section>
    <section>
        @if (hasResults)
        {
            <div class="row">
                <div class="col-sm-3 font-weight-bold">@Html.Raw(patientLocalization.Get("FirstName"))</div>
                <div class="col-sm-2 font-weight-bold">@Html.Raw(patientLocalization.Get("SecondName"))</div>
                <div class="col-sm-3 font-weight-bold">@Html.Raw(patientLocalization.Get("LastName"))</div>
                <div class="col-sm-2 font-weight-bold">@Html.Raw(patientLocalization.Get("BirthDate"))</div>
                <div class="col-sm-2 font-weight-bold">@Html.Raw(patientLocalization.Get("ViewPatient"))</div>
            </div>
            @foreach (PatientPreviewViewModel patient in Model.Patients)
            {
                <hr />
                <div class="row">
                    <div class="col-sm-3">@(string.IsNullOrWhiteSpace(patient.FirstName) ? Html.Raw(patientLocalization.Get("NotSpecified")).ToString() : patient.FirstName)</div>
                    <div class="col-sm-2">@(string.IsNullOrWhiteSpace(patient.SecondName) ? Html.Raw(patientLocalization.Get("NotSpecified")).ToString() : patient.SecondName)</div>
                    <div class="col-sm-3">@(string.IsNullOrWhiteSpace(patient.LastName) ? Html.Raw(patientLocalization.Get("NotSpecified")).ToString() : patient.LastName)</div>
                    <div class="col-sm-2">@(patient.BirthDate.ToShortDateString())</div>
                    <div class="col-sm-2">
                        <a asp-controller="@MedicBaseController.GetName(nameof(PatientController))"
                           asp-action="@nameof(PatientController.Patient)"
                           asp-route-id="@(patient.Id)" class="btn btn-info">@Html.Raw(patientLocalization.Get("View"))</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-info font-weight-bold text-center">@Html.Raw(patientLocalization.Get("NoPatients"))</div>
        }
    </section>
    @if (hasResults)
    {
        <footer>
            <pager page-count="@Model.TotalPages"
                   current-page="@Model.CurrentPage"
                   controller-name="@MedicBaseController.GetName(nameof(PatientController))"
                   action-name="@nameof(PatientController.Index)"
                   additional-properties="@paramsByName"
                   nav-class-names="btn-toolbar"
                   ul-class-names="pagination"
                   li-class-names="page-item"
                   li-selected-class-names="page-item active"
                   anchor-class-names="page-link">
            </pager>
        </footer>
    }
</article>
@section Scripts {
    <environment names="Development">
        <script defer src="~/js/formreset.js"></script>
    </environment>
    <environment names="Production">
        <script defer src="~/js/formreset.min.js"></script>
    </environment>
}