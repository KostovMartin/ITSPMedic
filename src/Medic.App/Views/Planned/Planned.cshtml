@model PlannedPagePlannedModel
@inject MedicDataLocalization medicDataLocalization

@if (Model.Planned != default)
{
    <article>
        <header>
            <h2 class="text-center">@($"{Html.Raw(medicDataLocalization.Get("PlannedView"))} - {Model.Planned.UniqueIdentifier}")</h2>
            <h4 class="text-center text-info">@Model.Keywords</h4>
        </header>
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("Patient"))</h2>
        <partial name="~/Views/Shared/Partials/Patients/PatientSummaryViewModel.cshtml" model="@Model.Planned.Patient" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("Sender"))</h2>
        <partial name="~/Views/Shared/Partials/HealthcarePractitioners/HealthcarePractitionerSummaryViewModel.cshtml" model="@Model.Planned.Sender" />
        <hr />
        <div>@Html.Raw(medicDataLocalization.Get("SendDate")): @Model.Planned.SendDate.ToShortDateString()</div>
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("SendDiagnoses"))</h2>
        <partial name="~/Views/Shared/Partials/Diagnoses/DiagnosePreviewViewModels.cshtml" model="@Model.Planned.SendDiagnoses" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("Diagnoses"))</h2>
        <partial name="~/Views/Shared/Partials/Diagnoses/DiagnosePreviewViewModels.cshtml" model="@Model.Planned.Diagnoses" />
        <hr />
        <h2 class="text-center">@Html.Raw(medicDataLocalization.Get("AdditionalInformation"))</h2>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PatientBranch")): @Model.Planned.PatientBranch</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PatientHRegion")): @Model.Planned.PatientHRegion</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("InType")): @Model.Planned.InType</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("SendDate")): @Model.Planned.SendDate.ToString("g")</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("SendUrgency")): @Model.Planned.SendUrgency</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("SendClinicalPath")): @Model.Planned.SendClinicalPath</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("UniqueIdentifier")): @Model.Planned.UniqueIdentifier</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ExaminationDate")): @Model.Planned.ExaminationDate.ToString("g")</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PlannedEntryDate")): @Model.Planned.PlannedEntryDate.ToString("g")</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PlannedNumber")): @Model.Planned.PlannedNumber</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("Urgency")): @Model.Planned.Urgency</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ClinicalPath")): @Model.Planned.ClinicalPath</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("NZOKPay")): @Model.Planned.NZOKPay</div>
        </div>
    </article>
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get("NoResults"))</div>
}