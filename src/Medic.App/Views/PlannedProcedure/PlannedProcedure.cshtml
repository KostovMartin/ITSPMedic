@model PlannedProcedurePagePlannedProcedureModel
@inject MedicDataLocalization medicDataLocalization

@if (Model.PlannedProcedure != default)
{
    <article>
        <header>
            <h1>@($"{medicDataLocalization.Get("PlannedProcedureView")} - {Model.PlannedProcedure.UniqueIdentifier}")</h1>
        </header>
        <h2 class="text-center">@medicDataLocalization.Get("Patient")</h2>
        <partial name="~/Views/Shared/Partials/Patients/PatientSummaryViewModel.cshtml" model="@Model.PlannedProcedure.Patient" />
        <hr />
        <h2 class="text-center">@medicDataLocalization.Get("Sender")</h2>
        <partial name="~/Views/Shared/Partials/HealthcarePractitioners/HealthcarePractitionerSummaryViewModel.cshtml" model="@Model.PlannedProcedure.Sender" />
        <hr />
        <div>@medicDataLocalization.Get("SendDate"): @Model.PlannedProcedure.SendDate.ToShortDateString()</div>
        <hr />
        <h2 class="text-center">@medicDataLocalization.Get("SendDiagnose")</h2>
        <partial name="~/Views/Shared/Partials/Diagnoses/DiagnosePreviewViewModel.cshtml" model="@Model.PlannedProcedure.SendDiagnose" />
        <hr />
        <h2 class="text-center">@medicDataLocalization.Get("Diagnose")</h2>
        <partial name="~/Views/Shared/Partials/Diagnoses/DiagnosePreviewViewModel.cshtml" model="@Model.PlannedProcedure.Diagnose" />
        <hr />
        <h2 class="text-center">@medicDataLocalization.Get("AdditionalInformation")</h2>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("PatientBranch"): @Model.PlannedProcedure.PatientBranch</div>
            <div class="col-sm-4">@medicDataLocalization.Get("PatientHRegion"): @Model.PlannedProcedure.PatientHRegion</div>
            <div class="col-sm-4">@medicDataLocalization.Get("InType"): @Model.PlannedProcedure.InType</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("SendDate"): @Model.PlannedProcedure.SendDate.ToString("g")</div>
            <div class="col-sm-4">@medicDataLocalization.Get("SendUrgency"): @Model.PlannedProcedure.SendUrgency</div>
            <div class="col-sm-4">@medicDataLocalization.Get("SendClinicalPath"): @Model.PlannedProcedure.SendClinicalPath</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("UniqueIdentifier"): @Model.PlannedProcedure.UniqueIdentifier</div>
            <div class="col-sm-4">@medicDataLocalization.Get("ExaminationDate"): @Model.PlannedProcedure.ExaminationDate.ToString("g")</div>
            <div class="col-sm-4">@medicDataLocalization.Get("PlannedEntryDate"): @Model.PlannedProcedure.PlannedEntryDate.ToString("g")</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("PlannedNumber"): @Model.PlannedProcedure.PlannedNumber</div>
            <div class="col-sm-4">@medicDataLocalization.Get("Urgency"): @Model.PlannedProcedure.Urgency</div>
            <div class="col-sm-4">@medicDataLocalization.Get("ClinicalPath"): @Model.PlannedProcedure.ClinicalPath</div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-4">@medicDataLocalization.Get("NZOKPay"): @Model.PlannedProcedure.NZOKPay</div>
        </div>
    </article>
}
else
{
    <div class="text-center text-info">@medicDataLocalization.Get("NoResults")</div>
}