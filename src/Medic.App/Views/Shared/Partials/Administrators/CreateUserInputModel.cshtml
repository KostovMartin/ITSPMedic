@using Medic.App.Models.Administrators.Models

@model CreateUserInputModel

@inject MedicDataLocalization medicDataLocalization

<form asp-action="@nameof(AdministratorController.Create)"
      asp-controller="@AdministratorController.GetName(nameof(AdministratorController))"
      method="post"
      asp-antiforgery="true"
      style="margin: 0 auto;max-width: 500px">
    <div class="form-group">
        <label asp-for="@Model.Username"></label>
        <input class="form-control" type="text" asp-for="@Model.Username" />
        <div><span class="text-danger" asp-validation-for="@Model.Username"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input class="form-control" type="text" asp-for="@Model.Email" />
        <div><span class="text-danger" asp-validation-for="@Model.Email"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input class="form-control" type="password" asp-for="@Model.Password" />
        <div><span class="text-danger" asp-validation-for="@Model.Password"></span></div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <input class="form-control" type="password" asp-for="@Model.ConfirmPassword" />
        <div><span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span></div>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="@Model.IsAdministrator" />
        <label asp-for="@Model.IsAdministrator"></label>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="submit" class="btn btn-primary" value="@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.CreateUser))" />
</form>