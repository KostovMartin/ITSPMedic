@model ClinicUsedDrugViewModel
@inject MedicDataLocalization medicDataLocalization

@if (Model != default)
{
    <div>
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DrugDate")): @Model.DrugDate.ToString("d")</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DrugCode")): @Model.DrugCode</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DrugName")): @Model.DrugName</div>
        </div>
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DrugQuantity")): @Model.DrugQuantity</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DrugCost")): @Model.DrugCost</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ICDDrug")): @Model.ICDDrug</div>
        </div>
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("UINPrescr")): @Model.UINPrescr</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("NoPrescr")): @Model.NoPrescr</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DatePrescr")): @(Model.DatePrescr.ToString("d"))</div>
        </div>
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PracticeCodeProtocol")): @Model.PracticeCodeProtocol</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ProtocolNumber")): @Model.ProtocolNumber</div>
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ProtocolDate")): @Model.ProtocolDate.ToString("d")</div>
        </div>
        <div class="row">
            <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ProtocolType")): @Model.ProtocolType</div>
        </div>
        <div>
            <div class="text-center font-weight-bold">@Html.Raw(medicDataLocalization.Get("VersionCode"))</div>
            <partial name="~/Views/Shared/Partials/VersionCodes/VersionCodeViewModel.cshtml" model="@Model.VersionCode" />
        </div>
    </div>
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get("NoResults"))</div>
}