@model List<DrugProtocolPreviewViewModel>
@inject MedicDataLocalization medicDataLocalization

@if (Model != default && Model.Count > 0)
{
    @foreach (var currentDrugProtocol in Model)
    {
        <hr />
        <div>
            <partial name="~/Views/Shared/Partials/TherapyTypes/TherapyTypePreviewViewModel.cshtml" model="@currentDrugProtocol.TherapyType" />
            <div class="row">
                <div class="col-sm-3">@medicDataLocalization.Get("ATCCode"): @currentDrugProtocol.ATCCode</div>
                <div class="col-sm-3">@medicDataLocalization.Get("ATCName"): @currentDrugProtocol.ATCName</div>
                <div class="col-sm-3">@medicDataLocalization.Get("Days"): @currentDrugProtocol.Days</div>
                <div class="col-sm-3">@medicDataLocalization.Get("ApplicationWay"): @currentDrugProtocol.ApplicationWay</div>
            </div>
            <div class="row">
                <div class="col-sm-3">@medicDataLocalization.Get("StandartDose"): @currentDrugProtocol.StandartDose</div>
                <div class="col-sm-3">@medicDataLocalization.Get("IndividualDose"): @currentDrugProtocol.IndividualDose</div>
                <div class="col-sm-3">@medicDataLocalization.Get("CycleDose"): @currentDrugProtocol.CycleDose</div>
                <div class="col-sm-3">@medicDataLocalization.Get("AllDose"): @currentDrugProtocol.AllDose</div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center text-info">@medicDataLocalization.Get("NoResults")</div>
}