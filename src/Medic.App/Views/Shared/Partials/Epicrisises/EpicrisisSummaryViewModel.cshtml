@model EpicrisisSummaryViewModel
@inject MedicDataLocalization medicDataLocalization

@if (Model != default)
{
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("History"))</div>
        <div class="col-sm-10">@Model.History</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("FairCondition"))</div>
        <div class="col-sm-10">@Model.FairCondition</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("ClinicalExaminations"))</div>
        <div class="col-sm-10">@Model.ClinicalExaminations</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("Consultations"))</div>
        <div class="col-sm-10">@Model.Consultations</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("Regimen"))</div>
        <div class="col-sm-10">@Model.Regimen</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("DiseaseCourse"))</div>
        <div class="col-sm-10">@Model.DiseaseCourse</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("Complications"))</div>
        <div class="col-sm-10">@Model.Complications</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("DateOfSurgery"))</div>
        <div class="col-sm-10">@(Model.DateOfSurgery != default ? ((DateTime)Model.DateOfSurgery).ToShortDateString() : default)</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("SampleProtocol"))</div>
        <div class="col-sm-10">@Model.SampleProtocol</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("PostoperativeStatus"))</div>
        <div class="col-sm-10">@Model.PostoperativeStatus</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("DischargeStatus"))</div>
        <div class="col-sm-10">@Model.DischargeStatus</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("Recommendations"))</div>
        <div class="col-sm-10">@Model.Recommendations</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("CheckupAfterDischarge"))</div>
        <div class="col-sm-10">@Model.CheckupAfterDischarge</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("GPRecommendations"))</div>
        <div class="col-sm-10">@Model.GPRecommendations</div>
    </div>
    <div class="row">
        <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("OtherDocuments"))</div>
        <div class="col-sm-10">@Model.OtherDocuments</div>
    </div>
}
else
{
<div class="text-center text-info">@Html.Raw(medicDataLocalization.Get("NoResults"))</div>
}