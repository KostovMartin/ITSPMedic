@model HealthcarePractitionerSummaryViewModel
@inject MedicDataLocalization medicDataLocalization

@if (Model != default)
{
    <div>
        <div class="row">
            <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("Speciality")):</div>
            <div class="col-sm-10">@Model.Speciality</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("Name")):</div>
            <div class="col-sm-10">@Model.Name</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("UniqueIdentifier")):</div>
            <div class="col-sm-10">@Model.UniqueIdentifier</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@Html.Raw(medicDataLocalization.Get("DeputyUniqueIdentifier")):</div>
            <div class="col-sm-10">@Model.DeputyUniqueIdentifier</div>
        </div>
    </div>
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get("NoResults"))</div>
}