@model PatientSummaryViewModel
@inject PatientLocalization patientLocalization 

@if (Model != default)
{
    <div>
        <div class="row">
            <div class="col-sm-2">@patientLocalization.Get("IdentityNumber"):</div>
            <div class="col-sm-10">@Model.IdentityNumber</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@patientLocalization.Get("FirstName"):</div>
            <div class="col-sm-10">@Model.FirstName</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@patientLocalization.Get("SecondName"):</div>
            <div class="col-sm-10">@Model.SecondName</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@patientLocalization.Get("LastName"):</div>
            <div class="col-sm-10">@Model.LastName</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@patientLocalization.Get("Sex"):</div>
            <div class="col-sm-10">@Model.Sex</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@patientLocalization.Get("Address"):</div>
            <div class="col-sm-10">@Model.Address</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@patientLocalization.Get("BirthDate"):</div>
            <div class="col-sm-10">@Model.BirthDate.ToShortDateString()</div>
        </div>
        <div class="row">
            <div class="col-sm-2">@patientLocalization.Get("Notes"):</div>
            <div class="col-sm-10">@Model.Notes</div>
        </div>
    </div>
}
else
{
    <div class="text-center text-info">@patientLocalization.Get("NoResults")</div>
}