@model List<ProcedureSummaryViewModel>
@inject MedicDataLocalization medicDataLocalization

@if (Model != default && Model.Count > 0)
{
    foreach (var currentProcedure in Model)
    {
        <hr />
        <div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Date)): @Html.Raw(currentProcedure.Date.ToShortDateString())</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Code)): @Html.Raw(currentProcedure.Code)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ACHICode)): @Html.Raw(currentProcedure.ACHICode)</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.OutHospital)): @Html.Raw(currentProcedure.OutHospital)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ImplantReferenceNumber)): @Html.Raw(currentProcedure.ImplantReferenceNumber)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ImplantManufacturer)): @Html.Raw(currentProcedure.ImplantManufacturer)</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ImplantCode)): @Html.Raw(currentProcedure.ImplantCode)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.BedDays)): @Html.Raw(currentProcedure.BedDays)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.HLDateFrom)): @Html.Raw((currentProcedure.HLDateFrom != default ? ((DateTime)currentProcedure.HLDateFrom).ToShortDateString() : default))</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.HLNumber)): @Html.Raw(currentProcedure.HLNumber)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.HLTotalDays)): @Html.Raw(currentProcedure.HLTotalDays)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.StateAtDischarge)): @Html.Raw(currentProcedure.StateAtDischarge)</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Laparoscopic)): @Html.Raw(currentProcedure.Laparoscopic)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.PathologicFinding)): @Html.Raw(currentProcedure.PathologicFinding)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.EndCourse)): @Html.Raw(currentProcedure.EndCourse)</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.SendApr)): @Html.Raw(currentProcedure.SendAPr)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.InApr)): @Html.Raw(currentProcedure.InAPr)</div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.NoResults))</div>
}