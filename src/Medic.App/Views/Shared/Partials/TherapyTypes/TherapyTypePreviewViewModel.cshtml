@model TherapyTypePreviewViewModel
@inject MedicDataLocalization medicDataLocalization

@if (Model != default)
{
    <div>
        <div class="row">
            <div class="col-sm-6">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Code)): @Html.Raw(Model.Code)</div>
            <div class="col-sm-6">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Name)): @Html.Raw(Model.Name)</div>
        </div>
    </div>
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.NoResults))</div>
}