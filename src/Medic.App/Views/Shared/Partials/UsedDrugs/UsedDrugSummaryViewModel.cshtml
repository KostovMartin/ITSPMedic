@model UsedDrugSummaryViewModel

@if (Model != default)
{
    <div>
        <div class="row">
            <div class="col-sm-4">Date: @Model.Date.ToShortDateString()</div>
            <div class="col-sm-4">Code :@Model.Code</div>
            <div class="col-sm-4">Quantity :@Model.Quantity</div>
        </div>
        <div class="row">
            <div class="col-sm-4">Cost :@Model.Cost</div>
            <div class="col-sm-4">ICD drug :@Model.ICDDrug</div>
            <div class="col-sm-4">UIN prescr :@Model.UINPrescr</div>
        </div>
        <div class="row">
            <div class="col-sm-4">No prescr :@Model.NoPrescr</div>
            <div class="col-sm-4">DatePrescr :@(Model.DatePrescr != default ? ((DateTime)Model.DatePrescr).ToShortDateString() : default)</div>
            <div class="col-sm-4">PracticeCodeProtocol :@Model.PracticeCodeProtocol</div>
        </div>
        <div class="row">
            <div class="col-sm-4">ProtocolNumber :@Model.ProtocolNumber</div>
            <div class="col-sm-4">ProtocolDate :@Model.ProtocolDate.ToShortDateString()</div>
            <div class="col-sm-4">ProtocolType :@Model.ProtocolType</div>
        </div>
        <div class="row">
            <div class="col-sm-4">BatchNumber :@Model.BatchNumber</div>
            <div class="col-sm-4">QuantityPack :@Model.QuantityPack</div>
        </div>
    </div>
}
else
{
    <div class="text-center text-info">No used drug summary data</div>
}