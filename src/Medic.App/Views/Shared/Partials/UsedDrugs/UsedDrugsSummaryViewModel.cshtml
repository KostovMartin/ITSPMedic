@model List<UsedDrugSummaryViewModel>
@inject MedicDataLocalization medicDataLocalization

@if (Model != default && Model.Count > 0)
{
    foreach (UsedDrugSummaryViewModel currentUsedDrug in Model)
    {
        <div>
            <hr/>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Date)): @Html.Raw(currentUsedDrug.Date.ToShortDateString())</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Code)): @Html.Raw(currentUsedDrug.Code)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Quantity)): @Html.Raw(currentUsedDrug.Quantity)</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Cost)): @Html.Raw(currentUsedDrug.Cost)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ICDDrug)): @Html.Raw(currentUsedDrug.ICDDrug)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.UINPrescr)): @Html.Raw(currentUsedDrug.UINPrescr)</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.NoPrescr)): @Html.Raw(currentUsedDrug.NoPrescr)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.DatePrescr)): @Html.Raw((currentUsedDrug.DatePrescr != default ? ((DateTime)currentUsedDrug.DatePrescr).ToShortDateString() : default))</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.PracticeCodeProtocol)): @currentUsedDrug.PracticeCodeProtocol)</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ProtocolNumber)): @Html.Raw(currentUsedDrug.ProtocolNumber)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ProtocolDate)): @Html.Raw(currentUsedDrug.ProtocolDate.ToShortDateString())</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ProtocolType)): @Html.Raw(currentUsedDrug.ProtocolType)</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.BatchNumber)): @Html.Raw(currentUsedDrug.BatchNumber)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.QuantityPack)): @Html.Raw(currentUsedDrug.QuantityPack)</div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.NoResults))</div>
}