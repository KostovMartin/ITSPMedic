@model List<UsedDrugSummaryViewModel>
@inject MedicDataLocalization medicDataLocalization

@if (Model != default && Model.Count > 0)
{
    foreach (UsedDrugSummaryViewModel currentUsedDrug in Model)
    {
        <div>
            <hr/>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Date)): @currentUsedDrug.Date.ToShortDateString()</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Code)): @currentUsedDrug.Code</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Quantity)): @currentUsedDrug.Quantity</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.Cost)): @currentUsedDrug.Cost</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ICDDrug)): @currentUsedDrug.ICDDrug</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.UINPrescr)): @currentUsedDrug.UINPrescr</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.NoPrescr)): @currentUsedDrug.NoPrescr</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.DatePrescr)): @(currentUsedDrug.DatePrescr != default ? ((DateTime)currentUsedDrug.DatePrescr).ToShortDateString() : default)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.PracticeCodeProtocol)): @currentUsedDrug.PracticeCodeProtocol</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ProtocolNumber)): @currentUsedDrug.ProtocolNumber</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ProtocolDate)): @currentUsedDrug.ProtocolDate.ToShortDateString()</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.ProtocolType)): @currentUsedDrug.ProtocolType</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.BatchNumber)): @currentUsedDrug.BatchNumber</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.QuantityPack)): @currentUsedDrug.QuantityPack</div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get(MedicDataLocalization.NoResults))</div>
}