@model List<UsedDrugSummaryViewModel>
@inject MedicDataLocalization medicDataLocalization

@if (Model != default && Model.Count > 0)
{
    foreach (UsedDrugSummaryViewModel currentUsedDrug in Model)
    {
        <div>
            <hr/>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("Date")): @currentUsedDrug.Date.ToShortDateString()</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("Code")): @currentUsedDrug.Code</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("Quantity")): @currentUsedDrug.Quantity</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("Cost")): @currentUsedDrug.Cost</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ICDDrug")): @currentUsedDrug.ICDDrug</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("UINPrescr")): @currentUsedDrug.UINPrescr</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("NoPrescr")): @currentUsedDrug.NoPrescr</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("DatePrescr")): @(currentUsedDrug.DatePrescr != default ? ((DateTime)currentUsedDrug.DatePrescr).ToShortDateString() : default)</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("PracticeCodeProtocol")): @currentUsedDrug.PracticeCodeProtocol</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ProtocolNumber")): @currentUsedDrug.ProtocolNumber</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ProtocolDate")): @currentUsedDrug.ProtocolDate.ToShortDateString()</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("ProtocolType")): @currentUsedDrug.ProtocolType</div>
            </div>
            <div class="row">
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("BatchNumber")): @currentUsedDrug.BatchNumber</div>
                <div class="col-sm-4">@Html.Raw(medicDataLocalization.Get("QuantityPack")): @currentUsedDrug.QuantityPack</div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center text-info">@Html.Raw(medicDataLocalization.Get("NoResults"))</div>
}